<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:sukiUi="clr-namespace:SukiUI.Controls;assembly=SukiUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:pages="clr-namespace:QTSAvalonia.ViewModels.Pages"
    xmlns:userControls="clr-namespace:QTSAvalonia.Views.UserControls"
    mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
    x:Class="QTSAvalonia.Views.Pages.Converter"
    x:DataType="pages:ConverterModelView">
    <Design.DataContext>
        <pages:ConverterModelView />
    </Design.DataContext>
    <UserControl.DataContext>
        <pages:ConverterModelView />
    </UserControl.DataContext>
    <Grid RowDefinitions="1.5*,7*,1.5*" MinHeight="600" MinWidth="1000">
        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal"
            HorizontalAlignment="Stretch"
            Margin="10">
            <Button
                Content="Open Quad File"
                Name="UploadButton"
                Width="140"
                Height="50"
                Margin="15"
                Command="{Binding OpenQuadFilePickerCommand}"/>
            <TextBlock
                Text="{Binding QuadFileName}"
                Foreground="DarkCyan"
                FontWeight="SemiBold"
                VerticalAlignment="Center"
                Margin="15"
                FontSize="14" />
        </StackPanel>
        <Grid Grid.Row="1"
              HorizontalAlignment="Center"
              ColumnDefinitions="9.5*,0.5*">
            <ScrollViewer
                Margin="15"
                HorizontalScrollBarVisibility="Visible"
                VerticalScrollBarVisibility="Disabled"
                MinWidth="900"
                IsScrollInertiaEnabled="True"
                IsScrollChainingEnabled="True">
                <!-- ItemsControl 自动监听 ObservableCollection 变化 -->
                <ItemsControl ItemsSource="{Binding Elements}">
                    <!-- 使用 StackPanel 作为容器（替代代码中手动操作） -->
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Spacing="4" Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <!-- 每项渲染为 Element UserControl，自动绑定 DataContext -->
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <userControls:Element DataContext="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <Button Grid.Column="1" 
                    Height="50" 
                    Content="+" 
                    HorizontalAlignment="Center"
                    Command="{Binding AddNewElementCommand}"
                    />
        </Grid>
        <StackPanel Grid.Row="2">
            <!-- 进度条 -->
            <ProgressBar
                Width="800"
                Height="24"
                Margin="0,0,0,15"
                Minimum="0"
                Maximum="100"
                Foreground="DarkOrange"
                ShowProgressText="True"
                Value="{Binding Progress}" />

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,15">
                <!-- 处理按钮 -->
                <Button
                    Content="Process Data"
                    Width="180"
                    Height="45"
                    Margin="0,0,15,15"
                    HorizontalAlignment="Center"
                    Command="{Binding ProcessDataCommand}"/>

                <!-- 结果链接 -->
                <HyperlinkButton
                    Content="{Binding ResultJsonUrl}"
                    NavigateUri="{Binding ResultJsonUrl}"
                    IsEnabled="False"
                    HorizontalAlignment="Center"
                    Margin="15,0,0,10"
                    FontSize="14" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>