<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pages="clr-namespace:QTSAvalonia.ViewModels.UserControls"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="30"
             x:Class="QTSAvalonia.Views.UserControls.HyperLinkTrimButton"
             x:DataType="pages:HyperLinkTrimButtonViewModel">
    <Design.DataContext>
        <pages:HyperLinkTrimButtonViewModel />
    </Design.DataContext>
    <UserControl.DataContext>
        <pages:HyperLinkTrimButtonViewModel />
    </UserControl.DataContext>
    <HyperlinkButton MaxWidth="200" NavigateUri="{Binding ImagePath}">
                <TextBlock Text="{Binding ImagePath}"
                           TextTrimming="CharacterEllipsis"
                           ToolTip.Tip="{Binding ImagePath}"/>
            </HyperlinkButton>
</UserControl>
